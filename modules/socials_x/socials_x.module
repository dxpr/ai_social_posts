<?php

use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_alter().
 */
function socials_x_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  if ($form_id === 'social_post_x_post_form') {
    $form['post_content']['widget'][0]['value']['#maxlength'] = 280;
    $form['post_content']['widget'][0]['value']['#description'] = t('Maximum 280 characters.');
  }
}
